extends layout 

block content
  h1 Create A Message
  if user 
    form(method="POST")
      .form-group 
        .inputContainer
          label(for='title') title:
          input#title.form-control(type='text', name='title', required, value=(undefined === title ? '' : title))
        .inputContainer
          label(for='text') Write The Text Here:
          textarea#text.form-control(name="text", cols="50", rows="4") #{undefined === text ? '' : text}  
      button.btn.btn-primary(type='submit') Submit
      
    if errors 
      ul 
        for error in errors 
          li!= error.msg 
  else 
    p You Are Not Loged In